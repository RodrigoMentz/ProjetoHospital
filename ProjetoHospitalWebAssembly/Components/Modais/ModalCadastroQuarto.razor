@if (this.isLoading)
{
    <Loading />
}
else
{
    <form>
        <div class="mb-3">
            <label for="nomeSetor" class="form-label fs-5">Nome do quarto</label>
            <input type="text" class="form-control" id="nomeSetor" aria-describedby="Nome do Quarto" @bind-value="Nome">
        </div>
        @if (this.exibirMensagemNomeCampoObrigatorio)
        {
            <div class="mb-3">
                <span class="fs-5 text-danger">O campo Nome do quarto é obrigatório</span>
            </div>
        }
        <div class="mb-3">
            <label for="setorQuarto" class="form-label fs-5">Setor</label>
            <select class="form-select" id="setorQuarto" aria-label="Setor do Quarto" disabled="@this.isLoading" @bind="IdSetor">
                @foreach (var setor in setores)
                {
                    <option value="@setor.Id">@setor.Nome</option>
                }
            </select>
        </div>
        @if (this.exibirMensagemSetorCampoObrigatorio)
        {
            <div class="mb-3">
                <span class="fs-5 text-danger">O campo Setor é obrigatório</span>
            </div>
        }
        <div class="mb-3">
            <label for="capacidadeQuarto" class="form-label fs-5">Quantidade máxima de leitos</label>
            <input type="number" min="1" class="form-control" id="capacidadeQuarto" aria-describedby="Nome do Quarto" @bind-value="Capacidade">
        </div>
        <div class="mb-3 form-check d-flex align-items-center">
            <input type="checkbox" class="form-check-input" id="ativoSetor" @bind="ativoInterno">
            <label class="form-check-label fs-5 ms-2" for="ativoSetor">Ativo</label>
        </div>
        <BotaoPrincipal Texto="Salvar" OnClick="SalvarAsync" />
    </form>
}