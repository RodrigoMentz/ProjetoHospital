@if (this.isLoading)
{
    <Loading />
}
else
{
    <form>
        <div class="mb-3">
            <label for="nomeLeito" class="form-label fs-5">Nome do leito</label>
            <input type="text" class="form-control" id="nomeLeito" aria-describedby="Nome do leito" @bind-value="Nome">
        </div>
        @if (this.exibirMensagemNomeCampoObrigatorio)
        {
            <div class="mb-3">
                <span class="fs-5 text-danger">O campo Nome do leito é obrigatório</span>
            </div>
        }
        <div class="mb-3">
            <label for="setorQuarto" class="form-label fs-5">Quarto</label>
            <select class="form-select" id="setorQuarto" aria-label="Setor do Quarto" disabled="@this.isLoading" @bind="IdQuarto">
                @foreach (var quarto in quartos)
                {
                    <option value="@quarto.Id">@quarto.Nome</option>
                }
            </select>
        </div>
        @if (this.exibirMensagemQuartoCampoObrigatorio)
        {
            <div class="mb-3">
                <span class="fs-5 text-danger">O campo Quarto é obrigatório</span>
            </div>
        }
        <div class="mb-3 form-check d-flex align-items-center">
            <input type="checkbox" class="form-check-input" id="ativoSetor" @bind="ativoInterno">
            <label class="form-check-label fs-5 ms-2" for="ativoSetor">Ativo</label>
        </div>
        <BotaoPrincipal Texto="Salvar" OnClick="SalvarAsync" />
    </form>
}