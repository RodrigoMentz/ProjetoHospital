@if (this.isLoading)
{
    <Loading />
}
else
{
    <form>
        <div class="mb-3">
            <label for="nomeSetor" class="form-label fs-5">Nome do setor</label>
            <input type="text" class="form-control" id="nomeSetor" aria-describedby="Nome do Setor" @bind-value="NomeSetor">
        </div>
        <div class="mb-3 form-check d-flex align-items-center">
            <input type="checkbox" class="form-check-input" id="ativoSetor" @bind="ativoInterno">
            <label class="form-check-label fs-5 ms-2" for="ativoSetor">Ativo</label>
        </div>
        @if (this.exibirMensagemCampoObrigatorio)
        {
            <div class="mb-3">
                <span class="fs-5 text-danger">O campo Nome é obrigatório</span>
            </div>
        }
        <BotaoPrincipal Texto="Salvar" OnClick="SalvarAsync" />
    </form>
}