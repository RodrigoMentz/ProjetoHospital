@page "/limpeza-emergencial/{idLimpeza}"
@layout MainLayoutApp

<div class="card">
    <div class="d-flex justify-content-between align-items-center p-3">
        <span class="fs-5">Leito: @limpeza.LeitoNome</span>
        <span class="fs-5">Quarto: @limpeza.QuartoNome</span>
    </div>
    <div class="d-flex align-items-center flex-column">
        <span class="fw-bold fs-5">Descrição:</span>
        <span class="mt-2 fs-5">@limpeza.Descricao</span>
    </div>
    <div class="d-grid p-3 mt-4">
        <BotaoPrincipal Texto="Finalizar limpeza" OnClick="FinalizarLimpeza" Disabled="this.isLoading" />
    </div>
</div>
