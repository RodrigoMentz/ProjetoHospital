@page "/quartos-para-limpar"
@layout MainLayoutApp
@using ProjetoHospitalShared
@using ProjetoHospitalWebAssembly.Components

@if (this.isLoading)
{
    <Loading />
}
else
{
    <div class="card">
        <div class="cabecalho px-3 py-2">
            <h1>Necessitam limpeza</h1>
        </div>
        <div class="card-body px-2 py-2">
            <div class="row">
                <div class="col-12 col-md-6 mb-3">
                    <NumeroQuartos Texto="Limpeza concorrente" Quantidade="quantidadeLeitosParaLimpezaConcorrente" TipoLimpeza="TipoLimpezaEnum.Concorrente" />
                </div>
                <div class="col-12 col-md-6 mb-3">
                    <NumeroQuartos Texto="Limpeza Terminal" Quantidade="quantidadeLeitosParaLimpezaTerminal" TipoLimpeza="TipoLimpezaEnum.Terminal" />
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-wrap align-items-center justify-content-center mt-4 gap-2">
        @foreach (var setor in setores)
        {
            <button type="button" class="btn btn-badge rounded-pill @(setorSelecionado.Id == setor.Id ? "selecionado" : string.Empty)" @onclick="() => OnSetorChange(setor)">
                <span class="fs-5">@setor.Nome</span>
            </button>
        }
    </div>
    @foreach (var leito in leitosFiltrados)
    {
        <div class="mt-4">
            <CardQuarto Leito="leito" OnClick="() => LimparLeito(leito)" />
        </div>
    }
}