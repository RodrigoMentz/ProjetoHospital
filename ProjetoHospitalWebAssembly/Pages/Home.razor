@page "/"
@page "/inicio"
@using ProjetoHospitalWebAssembly.Components
@layout EmptyLayout

@if (this.isLoading)
{
    <Loading />
}
else
{
    <div class="d-flex img align-items-center justify-content-center">
        <img src="LogoControleHospital.png" class="img-fluid" />
    </div>
    <div class="d-flex flex-column">
        <label for="numeroTelefone" class="form-label fs-5 mb-0">Número de telefone</label>
        <span class="text-danger">*Sem espaços, sem (), sem -</span>
        <input type="tel" class="form-control" id="numeroTelefone" aria-describedby="Número de telefone" @bind-value="numeroTelefone" inputmode="numeric" pattern="[0-9]*" maxlength="11" placeholder="Ex: 54987654321">
    </div>
    <div class="mt-3">
        <label for="senha" class="form-label fs-5">Senha</label>
        <input type="@(exibirSenha ? "text" : "password")" class="form-control" id="senha" aria-describedby="Senha" @bind-value="senha">
    </div>
    <div class="mt-1 form-check d-flex align-items-center">
        <input type="checkbox" class="form-check-input" id="exibirSenha" @bind="exibirSenha">
        <label class="form-check-label fs-5 ms-2" for="exibirSenha">Exibir senha</label>
    </div>
    @if (exibirMensagemCamposVazios)
    {
        <div class="mt-3 d-flex align-items-center">
            <span class="text-danger fs-5">Preencha os campos</span>
        </div>
    }
    <div class="row d-flex justify-content-center align-items-center mt-4">
        <div class="d-grid col-12">
            <BotaoPrincipal Texto="Acessar" OnClick="LoginAsync" Disabled="this.isLoading" />
        </div>
    </div>
}