@page "/leitos"
@using ProjetoHospitalWebAssembly.Components

@if (this.isLoading)
{
    <Loading />
}
else
{
    <div class="d-flex justify-content-between mt-4">
        <h1 class="fs-3">Gerenciar Leitos</h1>
        <BotaoPrincipal IconeBootstrap="bi-plus" Class="gap-1" ClassTexto="fs-6" Texto="Adicionar leito" OnClick="AdicionarAsync" />
    </div>
    <div class="card mt-4">
        <div class="card-header">
            <h2 class="fs-4">Leitos</h2>
        </div>
        <div class="card-body p-0 table-responsive">
            <table class="table table-hover m-0">
                <thead>
                    <tr>
                        <th scope="col">Leito</th>
                        <th scope="col">Quarto</th>
                        <th scope="col">Setor</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var leito in leitos)
                    {
                        <tr>
                            <td>
                                <span>@leito.Nome</span>
                            </td>
                            <td>
                                <span>@leito.Quarto.Nome</span>
                            </td>
                            <td>
                                <span>@leito.Quarto.NomeSetor</span>
                            </td>
                            <td>
                                <BadgeStatusAtivo Ativo="leito.Ativo" />
                            </td>
                            <td class="d-flex flex-row justify-content-center">
                                <BotaoSecundario ClassTexto="fs-6" Class="gap-1 ms-2" IconeBootstrap="bi-pen" Texto="Editar" OnClick="() => EditarAsync(leito)" />
                                <BotaoSecundario ClassTexto="fs-6" Class="gap-1 ms-2" IconeBootstrap="bi-trash" Texto="Excluir" OnClick="() => ExcluirAsync(leito)" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}