@page "/quartos"
@using ProjetoHospitalWebAssembly.Components

@if (this.isLoading)
{
    <div class="height-loading d-flex align-items-center justify-content-center">
        <Loading />
    </div>
}
else
{
    <div class="d-flex justify-content-between mt-4">
        <h1 class="fs-3">Gerenciar Quartos</h1>
        <BotaoPrincipal IconeBootstrap="bi-plus" Class="gap-1" ClassTexto="fs-6" Texto="Adicionar quarto" OnClick="AdicionarAsync" />
    </div>
    <div class="card mt-4">
        <div class="card-header">
            <div class="d-flex align-items-center">
                <h2 class="fs-4 my-2">Quartos</h2>
            </div>
            <div class="d-flex align-items-center">
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Gap="0.5rem">
                    <RadzenLabel Text="Filtrar por setor" Component="DropDownDataGridFiltering" />
                    <RadzenDropDownDataGrid FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterOperator="StringFilterOperator.StartsWith" AllowFiltering="true"
                                            Data=@setores TextProperty="Nome" ValueProperty="Id" AllowClear="false" @bind-Value=IdSetorSelecionado Name="DropDownDataGridFiltering" />
                </RadzenStack>
            </div>
        </div>
        <div class="card-body p-0 table-responsive">
            <table class="table table-hover m-0">
                <thead>
                    <tr>
                        <th scope="col">Quarto</th>
                        <th scope="col">Setor</th>
                        <th scope="col">Capacidade</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var quarto in quartosFiltrados)
                    {
                        <tr>
                            <td>
                                <span>@quarto.Nome</span>
                            </td>
                            <td>
                                <span>@quarto.NomeSetor</span>
                            </td>
                            <td>
                                <span>@quarto.Capacidade @(quarto.Capacidade == 1 ? "leito" : "leitos")</span>
                            </td>
                            <td>
                                <BadgeStatusAtivo Ativo="quarto.Ativo" />
                            </td>
                            <td class="d-flex flex-row justify-content-center">
                                <BotaoSecundario ClassTexto="fs-6" Class="gap-1 ms-2" IconeBootstrap="bi-pen" Texto="Editar" OnClick="() => EditarAsync(quarto)" />
                                <BotaoSecundario ClassTexto="fs-6" Class="gap-1 ms-2" IconeBootstrap="bi-trash" Texto="Excluir" OnClick="() => ExcluirAsync(quarto)" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}